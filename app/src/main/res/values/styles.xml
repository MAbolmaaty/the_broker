<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:layout_marginStart">@dimen/_28sdp</item>
        <item name="android:layout_marginEnd">@dimen/_28sdp</item>
        <item name="android:background">@drawable/bg_rectangle_corners</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="editTextSurrounded">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/bg_rectangle_surrounded_corners_grey</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:layout_marginStart">@dimen/_28sdp</item>
        <item name="android:layout_marginEnd">@dimen/_28sdp</item>
        <item name="android:background">@drawable/bg_rectangle_corners</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_rectangle_corners</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:buttonTint">@android:color/black</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rectangle_corners_18</item>
        <item name="android:backgroundTint">@color/darkGrey</item>
        <item name="android:paddingStart">@dimen/_36sdp</item>
        <item name="android:paddingEnd">@dimen/_36sdp</item>
        <item name="android:elevation">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/darkGrey</item>
    </style>

    <style name="back_arrow">
        <item name="android:layout_width">@dimen/_28sdp</item>
        <item name="android:layout_height">@dimen/_28sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="circleImageView">
        <item name="android:layout_width">@dimen/_64sdp</item>
        <item name="android:layout_height">@dimen/_64sdp</item>
    </style>

    <style name="iconMenu">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:src">@drawable/ic_menu</item>
    </style>

    <style name="tabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
    </style>

    <style name="DefaultTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
</resources>

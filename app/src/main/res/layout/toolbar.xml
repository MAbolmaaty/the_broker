<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_36sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_rectangle_corners_bottom"
    android:elevation="@dimen/_4sdp">

    <ImageView
        android:id="@+id/toolbarAction1"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:padding="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toolbarTitle1"
        style="@style/textView"
        android:elevation="@dimen/_4sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/cairo_semi_bold"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toolbarAction1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toolbarTitle2"
        style="@style/textView"
        android:elevation="@dimen/_4sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/cairo_semi_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/toolbarTitle3"
        style="@style/textView"
        android:elevation="@dimen/_4sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_10sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:visibility="invisible"
        android:background="@drawable/bg_rectangle_corners_18"
        android:backgroundTint="@android:color/black"
        android:fontFamily="@font/cairo_semi_bold"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toolbarTitle1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_delete"
        android:background="@drawable/bg_oval"
        android:backgroundTint="@color/lightGrey"
        android:tint="@color/darkGrey"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/requestsHistory"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/ic_history"
        android:tint="@color/darkGrey"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/debenture"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/ic_contract"
        android:tint="@color/darkGrey"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/download"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:src="@drawable/ic_download"
        android:tint="@color/darkGrey"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>